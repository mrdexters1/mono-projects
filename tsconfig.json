{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@ui": ["toolbox/components/ui/index.ts"],
      "@ui/*": ["toolbox/components/ui/*"],
      "@core": ["toolbox/components/core/index.ts"],
      "@core/*": ["toolbox/components/core/*"],
      "@lib/*": ["toolbox/lib/*"],
      "@hooks/*": ["toolbox/hooks/*"],
      "@utils/*": ["toolbox/utils/*"],
      "@helpers/*": ["toolbox/helpers/*"],
      "@toolbox/*": ["toolbox/*"],

      "@top/*": ["apps/top-tokens/app/*"],
      "@hardware/*": ["apps/hardware-picker-ai/app/*"],
      "@upwork/*": ["apps/upwork/app/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "skipLibCheck": true
}
